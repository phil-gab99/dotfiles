{
  "settings": {
    // Explorer
    "explorer.compactFolders": false,

    // Editor
    "editor.lineNumbers": "relative",
    "editor.fontLigatures": true,

    // Python
    "python.defaultInterpreterPath": "/path/to/3.10.10-1/exec/bin/python",
    "python.venvPath": "~/.virtualenvs",
    "python.languageServer": "Pylance",
    "python.envFile": "${workspaceFolder}/.env",
    "python.formatting.autopep8Args": [
      "--max-line-length",
      "500"
    ],
    "[python]": {
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      },
      "editor.defaultFormatter": "ms-python.python"
    },
    "notebook.output.textLineLimit": 500,

    // Git
    "git.path": "/path/to/git/2.35.3/bin/git",

    // Sonarlint
    "sonarlint.ls.javaHome": "/path/to/azulzulu-openjdk/11.0.18_11.62.18",

    // Files
    "files.associations": {
      "*.include": "jil",
      "*.tmpl": "properties",
      "*pipeline*": "jenkinsfile"
    },
    "files.exclude": {
      "**/.git": false,
      "**/.svn": false,
      "**.hg": false,
      "**/CVS": false,
      "**/.DS_Store": false,
      "**/Thumbs.db": false
    },

    // Json schemas
    "json.schemaDownload.enable": false,
    "json.schemas": [
      {
        "fileMatch": [
          "devcontainer.json"
        ],
        "url": "file://path/to/.config/devContainer/devContainer.schema.json"
      }
    ]
  },
  "extensions": [
    "EditorConfig.EditorConfig",
    "hbenl.vscode-test-explorer",
    "KevinRose.vsc-python-indent",
    "LittleFoxTeam.vscode-python-test-adapter",
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-python.gather",
    "ms-toolsai.jupyter",
    "ms-vscode.test-adapter-converter",
    "njqdev.vscode-python-typehint",
    "ivory-lab.jenkinsfile-support",
    "SonarSource.sonarlint-vscode",
    "chnicholas.jil-highlighter",
    "stardog-union.stardog-rdf-grammar",
    "bungcip.better-toml"
  ]
}

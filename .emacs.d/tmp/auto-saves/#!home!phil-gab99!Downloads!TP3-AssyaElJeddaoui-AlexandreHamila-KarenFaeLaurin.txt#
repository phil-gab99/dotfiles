---------------------------------
Racine carre : Methode de Newton
---------------------------------
 

	LDA	one
	STO	yn
	IN
	STO	x
	
loopYn1
	LDA	yn
	MUL	yn
	STO 	ynCarre
	LDA	x
	SUB	ynCarre
	STO	top

	LDA	yn
	MUL	deux
	STO	ynFois2
	
	LDA	top
	DIV	ynFois2
	ADD	yn
	STO	ynPlus1

compare	
	SUB	yn 
	BRZ	END
	LDA	ynPlus1
	STO	yn
	BR	loopYn1

END	
	LDA	ynPlus1
	OUT
	HLT



one		DAT	001
deux		DAT	002
x 		DAT	000
yn		DAT	000	
ynPlus1		DAT	000
ynCarre		DAT	000
ynFois2		DAT	000
top		DAT	000

-----------------------------------
Racine carre : Methode de Dijkstra
-----------------------------------


 
INPUT
	IN
	STO	x

reset	
	LDA	zero
	STO	y
	
	LDA	one
	STO	delta

	LDA	quinze
	STO	n

setDelta
	LDA	delta
	MUL	deux
	STO	delta

	LDA	n
	SUB	one
	STO 	n

	BRZ	loop
	BR	setDelta

loop
	LDA	y
	ADD	delta
	STO	tmp	
	MUL	tmp	
	
	SUB	x
	BRZ	loopIf
	BRP	loopElse

loopIf	
	LDA	tmp
	STO	y
	BR	conditionLoop
	


loopElse
	LDA	delta
	DIV	deux
	STO	delta

conditionLoop
	LDA	delta
	BRZ	END
	BR	loop

END	
	LDA	y
	OUT
	HTL


zero 		DAT	000
one		DAT 	001
deux		DAT	002
quinze		DAT	015

x		DAT	000
y		DAT	000
n		DAT	000
delta		DAT	000
tmp		DAT	000

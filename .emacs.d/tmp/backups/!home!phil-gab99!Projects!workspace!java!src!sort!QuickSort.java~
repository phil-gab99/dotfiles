package sort;

import java.util.Arrays;

public class QuickSort {

    public void quickSort(Comparable[] array, int from, int to) {
        
        if (from >= to) {
            
            return;
        }
        
        int p = partition(array, from, to);
        quickSort(array, from, p);
        quickSort(array, p + 1, to);
    }
    
    public int partition(Comparable[] array, int from, int to) {
        
        Comparable pivot = array[from];
        int p = from;
        
        for (int r = from + 1; r <= to; r++) {
            
            if (array[r].compareTo(pivot) < 0) {
                
                array[p] = array[r];
                array[r] = array[p + 1];
                array[p + 1] = pivot;
                p++;
            }
        }
        
        return p;
    }
}
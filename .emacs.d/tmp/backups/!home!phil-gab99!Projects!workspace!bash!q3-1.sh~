#!/bin/bash

# En utilisant la structure while, écrire un programme qui donne les valeurs de
# y d'une fonction pour les valeurs de x de -10 à 10 avec un incrément de 1

# Réalisez le traitement pour les fonctions y = x et y = x^2

################################################################################

UPPERBOUND=10
LOWERBOUND=-10

x=$LOWERBOUND

while [ $x -le $UPPERBOUND ]; do
    echo "x = $x"
    echo "y(x) = x   -> y = $x"
    echo -e "y(x) = x^2 -> y = $(($x * $x))\n"
    ((x++))
done

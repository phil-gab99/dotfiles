  int main() {
      pid_t pid;

      // fork a child process
      pid = fork();

      // error occurred
      if (pid < 0) { 
          fprintf(stderr, "Fork Failed\n");
          return 1;
      }
      // child process
      else if (pid == 0) printf("I am the child %d\n",pid);

      // parent process
      // parent will wait for the child to complete
      else {
          printf("I am the parent %d\n",pid);
          wait(NULL); // Pas de contrôle sur l'ordre d'exécution entre le parent et l'enfant, c'est aléatoire
          printf("Child Complete\n");
      }

      printf("%s\n", );("After the if \n");
      return 0;
  }

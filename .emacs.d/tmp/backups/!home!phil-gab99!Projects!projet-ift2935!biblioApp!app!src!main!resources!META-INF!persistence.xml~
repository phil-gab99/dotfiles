             version="3.0">
  <persistence-unit name="default">
    <description>
      Persistence unit for our DB.
    </description>

    <class>biblioApp.Abonne</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/biblio;shutdown=true"/>
      <property name="jakarta.persistence.jdbc.user" value="usr"/>
      <property name="jakarta.persistence.jdbc.password" value="ps"/>
      <property name="jakarta.persistence.schema-generation" value="create-drop"/>
    </properties>
  </persistence-unit>

#include <list>
#include <string>

#include "compte.h"

using namespace std;

/**
 * Declaration of a client.
 *
 * 2021-12-09
 * Philippe Gabriel
 * Étienne Ameye 
 */
class client {
    int num;                      // Client number
    string lastName;              // Client last name
    string firstName;             // Client first name
public:
    list<comptBanq*> listComptes; // Client bank accounts
    
    /**
     * Initializes a client.
     *
     * @param num Client number
     * @param lastName Client last name
     * @param firstName Client first name
     * @param listComptes Client bank accounts
     */
    client(int, string, string, list<comptBanq*>);

    /**
     * Displays information relative to this client
     */
    void afficheInfosClient() const;
};

